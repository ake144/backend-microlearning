generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String           @id @default(uuid())
  email          String           @unique
  password       String
  name           String
  phone          String?
  avatar         String?
  isVerified     Boolean          @default(false)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  bookPurchases  BookPurchase[]
  enrollments    Enrollment[]
  flashcardDecks FlashcardDeck[]
  progress       LessonProgress[]
  notes          Note[]
  payments       Payment[]
}

model Course {
  id            Int          @id @default(autoincrement())
  slug          String       @unique
  title         String
  description   String
  image         String?
  price         Float
  originalPrice Float?
  currency      String       @default("USD")
  priceETB      Float?
  published     Boolean      @default(false)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  enrollments   Enrollment[]
  modules       Module[]
  payments      Payment[]
}

model Module {
  id       Int      @id @default(autoincrement())
  title    String
  order    Int      @default(0)
  courseId Int
  lessons  Lesson[]
  course   Course   @relation(fields: [courseId], references: [id])
}

model Lesson {
  id         Int              @id @default(autoincrement())
  title      String
  duration   String?
  overview   String?
  transcript String?
  videoId    String?
  order      Int              @default(0)
  moduleId   Int
  module     Module           @relation(fields: [moduleId], references: [id])
  progress   LessonProgress[]
  questions  Question[]
  resources  Resource[]
}

model Book {
  id              Int            @id @default(autoincrement())
  title           String
  author          String
  longDescription String?
  description     String
  category        String
  price           Float
  originalPrice   Float?
  currency        String         @default("USD")
  priceETB        Float?
  images          String?
  pages           Int?
  language        String         @default("English")
  format          String         @default("PDF")
  Publisher       String?
  edition         String?
  isbn            String?
  rating          Float?
  reviews         Float?
  downloadUrl     String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  purchases       BookPurchase[]
  payments        Payment[]
}

model BookPurchase {
  id          String   @id @default(uuid())
  userId      String
  bookId      Int
  purchasedAt DateTime @default(now())
  book        Book     @relation(fields: [bookId], references: [id])
  user        User     @relation(fields: [userId], references: [id])

  @@unique([userId, bookId])
}

model Exam {
  id            Int            @id @default(autoincrement())
  title         String
  description   String
  category      String
  level         String
  type          String
  questions     Int
  duration      Int
  passingScore  Float
  attempts      Int            @default(0)
  averageScore  Float          @default(0)
  image         String?
  topics        String[]
  requirements  String[]
  benefits      String[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  examQuestions ExamQuestion[]
}

model ExamQuestion {
  id            Int      @id @default(autoincrement())
  question      String
  options       String[]
  correctAnswer Int
  examId        Int
  exam          Exam     @relation(fields: [examId], references: [id])
}

model Resource {
  id       Int    @id @default(autoincrement())
  title    String
  url      String
  lessonId Int
  lesson   Lesson @relation(fields: [lessonId], references: [id])
}

model Question {
  id            Int      @id @default(autoincrement())
  question      String
  options       String[]
  correctAnswer String
  lessonId      Int
  lesson        Lesson   @relation(fields: [lessonId], references: [id])
}

model Enrollment {
  id         String   @id @default(uuid())
  userId     String
  courseId   Int
  enrolledAt DateTime @default(now())
  course     Course   @relation(fields: [courseId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@unique([userId, courseId])
}

model LessonProgress {
  id            String   @id @default(uuid())
  userId        String
  lessonId      Int
  completed     Boolean  @default(false)
  videoProgress Int      @default(0)
  quizScore     Int?
  updatedAt     DateTime @updatedAt
  lesson        Lesson   @relation(fields: [lessonId], references: [id])
  user          User     @relation(fields: [userId], references: [id])

  @@unique([userId, lessonId])
}

model Note {
  id        String   @id @default(uuid())
  userId    String
  title     String
  content   String
  subject   String?
  tags      String[]
  starred   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model FlashcardDeck {
  id        String      @id @default(uuid())
  userId    String
  title     String
  createdAt DateTime    @default(now())
  cards     Flashcard[]
  user      User        @relation(fields: [userId], references: [id])
}

model Flashcard {
  id        String        @id @default(uuid())
  deckId    String
  front     String
  back      String
  createdAt DateTime      @default(now())
  deck      FlashcardDeck @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

model Payment {
  id            String   @id @default(uuid())
  userId        String
  courseId      Int?
  bookId        Int?
  amount        Float
  currency      String
  status        String
  provider      String
  transactionId String?
  createdAt     DateTime @default(now())
  book          Book?    @relation(fields: [bookId], references: [id])
  course        Course?  @relation(fields: [courseId], references: [id])
  user          User     @relation(fields: [userId], references: [id])
}
